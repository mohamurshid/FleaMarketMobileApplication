<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detailScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="@dimen/space_md"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imagePager"
                android:layout_width="0dp"
                android:layout_height="320dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/imagesIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/on_primary"
                android:layout_marginTop="@dimen/space_sm"
                app:tabIndicatorFullWidth="false"
                app:tabSelectedTextColor="@color/on_primary"
                app:tabTextColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/imagePager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_back_button"
                android:contentDescription="@string/accessibility_back"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/on_primary"
                app:layout_constraintTop_toTopOf="@id/imagePager"
                app:layout_constraintStart_toStartOf="@id/imagePager" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/infoCard"
                style="@style/Widget.FleaMarket.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_lg"
                app:layout_constraintTop_toBottomOf="@id/imagesIndicator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_md">

                    <TextView
                        android:id="@+id/itemTitle"
                        style="@style/TextAppearance.FleaMarket.Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/itemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:text="KSh 0"
                        android:textColor="@color/primary"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/itemTitle" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/pickupChip"
                        style="@style/Widget.FleaMarket.Chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup: STC"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/itemPrice"
                        android:layout_marginTop="@dimen/space_xs" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/timePostedChip"
                        style="@style/Widget.FleaMarket.Chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posted: 1h ago"
                        android:layout_marginStart="@dimen/space_sm"
                        app:layout_constraintStart_toEndOf="@id/pickupChip"
                        app:layout_constraintBaseline_toBaselineOf="@id/pickupChip" />

                    <TextView
                        android:id="@+id/itemCategory"
                        style="@style/TextAppearance.FleaMarket.Caption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:text="Category"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pickupChip" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sellerCard"
                style="@style/Widget.FleaMarket.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:layout_constraintTop_toBottomOf="@id/infoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_md">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/sellerAvatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent" />

                    <TextView
                        android:id="@+id/sellerName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Seller Name"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/sellerAvatar"
                        app:layout_constraintTop_toTopOf="@id/sellerAvatar"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/space_sm" />

                    <TextView
                        android:id="@+id/sellerRating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rating • 4.8"
                        style="@style/TextAppearance.FleaMarket.Caption"
                        app:layout_constraintStart_toStartOf="@id/sellerName"
                        app:layout_constraintTop_toBottomOf="@id/sellerName"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/sellerStats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12 sales • Member since 2021"
                        style="@style/TextAppearance.FleaMarket.Caption"
                        app:layout_constraintStart_toStartOf="@id/sellerName"
                        app:layout_constraintTop_toBottomOf="@id/sellerRating"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/actionRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/sellerCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/contactButton"
                    style="@style/Widget.FleaMarket.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_sm"
                    android:layout_weight="1"
                    android:text="Contact" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/offerButton"
                    style="@style/Widget.FleaMarket.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_sm"
                    android:layout_weight="1"
                    android:text="Make Offer" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/favoriteButton"
                    style="@style/Widget.FleaMarket.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Favorite" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detailsCard"
                style="@style/Widget.FleaMarket.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:layout_constraintTop_toBottomOf="@id/actionRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_md">

                    <TextView
                        android:id="@+id/itemDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item description goes here"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/conditionValue"
                        style="@style/TextAppearance.FleaMarket.Caption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Condition: New"
                        android:layout_marginTop="@dimen/space_sm"
                        app:layout_constraintTop_toBottomOf="@id/itemDescription"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/categoryValue"
                        style="@style/TextAppearance.FleaMarket.Caption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Category: Electronics"
                        android:layout_marginTop="@dimen/space_xs"
                        app:layout_constraintTop_toBottomOf="@id/conditionValue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/pickupValue"
                        style="@style/TextAppearance.FleaMarket.Caption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pickup: STC"
                        android:layout_marginTop="@dimen/space_xs"
                        app:layout_constraintTop_toBottomOf="@id/categoryValue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/auctionCard"
                style="@style/Widget.FleaMarket.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/detailsCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_md">

                    <TextView
                        android:id="@+id/currentBidLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Current Highest Bid"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/currentBidAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KSh 0"
                        android:textColor="@color/primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/space_xs"
                        app:layout_constraintTop_toBottomOf="@id/currentBidLabel"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/timeRemaining"
                        style="@style/TextAppearance.FleaMarket.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ends in 3h"
                        android:layout_marginTop="@dimen/space_xs"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/currentBidAmount" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bidHistoryRecycler"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/timeRemaining"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/bidAmountInput"
                        style="@style/Widget.FleaMarket.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        android:hint="Your bid (KSh)"
                        app:layout_constraintTop_toBottomOf="@id/bidHistoryRecycler"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bidAmountEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/placeBidButton"
                        style="@style/Widget.FleaMarket.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:text="Place Bid"
                        app:layout_constraintTop_toBottomOf="@id/bidAmountInput"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/primaryActionButton"
                style="@style/Widget.FleaMarket.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_lg"
                android:layout_marginBottom="@dimen/space_xl"
                android:text="Buy Now"
                app:layout_constraintTop_toBottomOf="@id/auctionCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/detailProgress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

