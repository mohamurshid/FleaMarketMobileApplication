<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/createScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="@dimen/space_md"
        app:layout_constraintWidth_max="@dimen/content_max_width"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/on_primary"
                android:minHeight="48dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="start"
                app:iconTint="@color/on_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/basicInfoCard"
                style="@style/Widget.FleaMarket.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:layout_constraintTop_toBottomOf="@id/backButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_md">

                    <TextView
                        android:id="@+id/basicInfoTitle"
                        style="@style/TextAppearance.FleaMarket.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_listing_basic_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/titleInput"
                        style="@style/Widget.FleaMarket.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        android:hint="@string/create_listing_hint_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/basicInfoTitle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/titleEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/descriptionInput"
                        style="@style/Widget.FleaMarket.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        android:hint="@string/create_listing_hint_description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/titleInput">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/descriptionEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="4"
                            android:minHeight="48dp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/categoryInput"
                        style="@style/Widget.FleaMarket.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        android:hint="@string/create_listing_hint_category"
                        app:endIconMode="dropdown_menu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/descriptionInput">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/categoryAutoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:focusable="false"
                            android:inputType="none"
                            android:hint="@string/create_listing_hint_category"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary"
                            android:contentDescription="@string/create_listing_hint_category" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pricingCard"
                style="@style/Widget.FleaMarket.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:layout_constraintTop_toBottomOf="@id/basicInfoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_md">

                    <TextView
                        android:id="@+id/pricingTitle"
                        style="@style/TextAppearance.FleaMarket.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_listing_pricing_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/itemTypeToggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        app:singleSelection="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pricingTitle">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/fixedPriceButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:layout_weight="1"
                            android:text="@string/create_listing_option_fixed" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/auctionButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:layout_weight="1"
                            android:text="@string/create_listing_option_auction" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/priceInput"
                        style="@style/Widget.FleaMarket.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        android:hint="@string/create_listing_hint_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/itemTypeToggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/priceEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/startingBidInput"
                        style="@style/Widget.FleaMarket.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        android:hint="@string/create_listing_hint_start_bid"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/priceInput">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/startingBidEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/auctionDurationInput"
                        style="@style/Widget.FleaMarket.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:hint="@string/create_listing_hint_duration"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/startingBidInput">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/auctionDurationEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:inputType="number"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detailsCard"
                style="@style/Widget.FleaMarket.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:layout_constraintTop_toBottomOf="@id/pricingCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_md">

                    <TextView
                        android:id="@+id/detailsTitle"
                        style="@style/TextAppearance.FleaMarket.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_listing_details_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/conditionInput"
                        style="@style/Widget.FleaMarket.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:hint="@string/create_listing_hint_condition"
                        app:endIconMode="dropdown_menu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detailsTitle">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/conditionAutoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:focusable="false"
                            android:inputType="none"
                            android:hint="@string/create_listing_hint_condition"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary"
                            android:contentDescription="@string/create_listing_hint_condition" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pickupLocationInput"
                        style="@style/Widget.FleaMarket.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_sm"
                        android:hint="@string/create_listing_hint_pickup"
                        app:endIconMode="dropdown_menu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/conditionInput">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/pickupLocationAutoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:focusable="false"
                            android:inputType="none"
                            android:hint="@string/create_listing_hint_pickup"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_secondary"
                            android:contentDescription="@string/create_listing_hint_pickup" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imagesCard"
                style="@style/Widget.FleaMarket.Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:layout_constraintTop_toBottomOf="@id/detailsCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_md">

                    <TextView
                        android:id="@+id/imagesTitle"
                        style="@style/TextAppearance.FleaMarket.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_listing_images_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/imagesSubtitle"
                        style="@style/TextAppearance.FleaMarket.Caption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_xs"
                        android:text="@string/create_listing_images_subtitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imagesTitle" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/selectedImagesRecycler"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="@dimen/space_sm"
                        android:overScrollMode="never"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imagesSubtitle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addImagesButton"
                        style="@style/Widget.FleaMarket.Button.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_md"
                        android:minHeight="48dp"
                        android:text="@string/create_listing_add_images"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/selectedImagesRecycler"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/postListingButton"
                style="@style/Widget.FleaMarket.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_lg"
                android:layout_marginBottom="@dimen/space_xl"
                android:minHeight="48dp"
                android:text="@string/create_listing_post"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imagesCard" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>